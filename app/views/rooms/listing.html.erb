<div class="row">
    <div class="col-md-3">
        <%= render "sidebar" %>
    </div>

    <div class="col-md-9">
        <div class="card">
            <div class="card-header">
                Listing
            </div>

            <div class="card-body">
                <div class="container">
                    <%= form_for @room do |f| %>
                        <div class="row">
                            <div class="col-md-4 select">
                                <div class="form-group">
                                    <label>Home Type</label>
                                    <%= f.select :home_type, [["Apartment", "Apartment"], ["House", "House"], ["Bed & Breakfast", "Bed & Breakfast"]],
                                                id: "home_type", prompt: "Select...", class: "form-control" %>
                                </div>
                            </div>

                            <div class="col-md-4 select">
                                <div class="form-group">
                                    <label>Room Type</label>
                                    <%= f.select :room_type, [["Entire", "Entire"], ["Private", "Private"], ["Shared", "Shared"]],
                                                id: "room_type", prompt: "Select...", class: "form-control" %>
                                </div>
                            </div>

                            <div class="col-md-4 select">
                                <div class="form-group">
                                    <label>Accommodate</label>
                                    <%= f.select :capacity, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                                                id: "capacity", prompt: "Select...", class: "form-control" %>
                                </div>
                            </div>

                            <div class="col-md-4 select">
                                <div class="form-group">
                                    <label>Bedrooms</label>
                                    <%= f.select :bedroom_count, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                                                id: "bedroom_count", prompt: "Select...", class: "form-control" %>
                                </div>
                            </div>

                            <div class="col-md-4 select">
                                <div class="form-group">
                                    <label>Bathrooms</label>
                                    <%= f.select :bathroom_count, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                                                id: "bathroom_count", prompt: "Select...", class: "form-control" %>
                                </div>
                            </div>
                        </div>

                        <div><%= f.submit "Save", class: "btn btn-normal" %></div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
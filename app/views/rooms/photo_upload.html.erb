<div class="row">
    <div class="col-md-3">
        <%= render "sidebar" %>
    </div>

    <div class="col-md-9">
        <div class="card">
            <div class="card-header">
                Photos
            </div>

            <div class="card-body">
                <div class="container">
                    <div class="row">
                        <div class="offset-md-3 col-md-6">
                            <%= form_for @room, url: room_photos_path(@room), method: 'post', html: {multipart: true} do |f| %>
                                <div class="form-group">
                                    <span class="btn btn-default btn-file teal">
                                        <i class="fa fa-cloud-upload"></i> Select Photos
                                        <%= file_field_tag "images[]", type: :file, multiple: true %>
                                    </span>
                                </div>

                                <div class="text-center">
                                    <%= f.submit "Add Photos", class: "btn btn-form" %>
                                </div>
                            <% end %>
                        </div>
                    </div>

                    <div id="photos"><%= render "photos/photo_list" %></div>
                </div>
            </div>
        </div>
    </div>
</div>
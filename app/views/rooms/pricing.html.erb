<div class="row">
    <div class="col-md-3">
        <%= render "sidebar" %>
    </div>

    <div class="col-md-9">
        <div class="card">
            <div class="card-header">
                Pricing
            </div>

            <div class="card-body">
                <div class="container">
                    <%= form_for @room do |f| %>
                        <div class="form-group">
                            <label>Price</label>
                            <%= f.text_field :price, placeholder: "eg: $100", class: "form-control", required: true %>
                        </div>

                        <div class="text-center">
                            <%= f.submit "Save", class: "btn btn-form" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>